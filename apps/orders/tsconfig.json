{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "es6",
    "noImplicitAny": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "dist",
    "baseUrl": ".",
    "paths": {
      "~services/*": ["./src/app/services/*"],
      "~domain/*": ["./src/domain/*"],
      "~infra/*": ["./src/infra/*"],
      "~util/*": ["./src/util/*"]
    }
  },
  "include": [
    "src/**/*"
  ]
}